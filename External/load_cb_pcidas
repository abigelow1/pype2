#!/bin/sh
#
# load COMEDI drivers for cb_pcidas
#

lnum=$(cat /proc/pci | grep -n "Computer Boards" | awk -F: '{print $1-1}')
addr=$(head -$lnum /proc/pci | tail -1 | sed 's/,/ /g' | \
	awk '{printf("%d,%d\n",$2,$4)}')
/sbin/modprobe cb_pcidas
/usr/sbin/comedi_config /dev/comedi0 cb_pcidas $addr

echo "Loaded COMEDI cb_pcidas device at <$addr>"
